@model Mailo.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}
<!DOCTYPE html>
<html lang="en">
<head>
<style>
   .container1{ 
     background-color: rgba(143, 217, 251, 0.2); 
    border-radius: 10px;
            padding: 2%;
   width: 50%;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
            margin: auto;
   }

    .form-control{
        width: 250px;
    }
    </style>

</head>
<body>


    <h2 class="text-primary">Registration</h2>


<hr />

<div class="container1 justify-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Registration">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (ViewBag.Message!=null)
                {
                    <div class="form-group" style="color:green;">@ViewBag.Message</div>
                }
                <span class="form-group mb-3">
                    <label asp-for="FName" class="control-label"></label>
                        <i class="fas fa-user"></i><input asp-for="FName" class="form-control" />
                    <span asp-validation-for="FName" class="text-danger"></span>
                </span>
                    <span class="form-group mb-3">
                    <label asp-for="LName" class="control-label"></label>
                        <i class="fas fa-user"></i><input asp-for="LName" class="form-control" />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </span>
                    <div class="form-group mb-3">
                    <label asp-for="Username" class="control-label"></label>
                        <i class="fas fa-user-circle"></i><input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                    <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                        <i class="fas fa-phone"></i> <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                    <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                        <i class="fas fa-envelope"></i><input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                    <div class="form-group mb-3">
                    <label asp-for="Password" class="control-label"></label>
                        <i class="fas fa-lock"></i><input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                    <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                        <i class="fas fa-lock"></i> <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                    <div class="form-group mb-3">
                        <label asp-for="Gender" class="control-label"></label>  <i class="fas fa-venus-mars"></i>

                    @foreach (var gender in Enum.GetValues(typeof(Mailo.Data.Enums.Gender)))
                    {
                        <div class="form-check">
                                <input asp-for="Gender" class="form-check-input" type="radio" value="@gender" id="@gender.ToString()">
                            <label class="form-check-label" for="@gender.ToString()">@gender.ToString()</label>
                        </div>
                    }

                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="City" class="control-label"></label>
                        <i class="fas fa-map-marker-alt"></i><input asp-for="City" class="form-control" readonly value="Egypt"  />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                    <div class="form-group mb-3">
                        <label asp-for="Governorate" class="control-label"></label>
                        <i class="fas fa-map-marker-alt"></i>
                        <select asp-for="Governorate" class="form-control" asp-items="Html.GetEnumSelectList<Mailoo.Data.Enums.Governorate>()">
                         <option value="">-- Select Governorate --</option>

                        </select>
                        <span asp-validation-for="Governorate" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Address" class="control-label"></label>
                        <i class="fas fa-map-marker-alt"></i><input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input type="submit" value="Register" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
<br/>
<div>
  Already have an account?  <a asp-action="Login">Go to Login</a>
</div>
    <br />
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
