@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Our Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <form method="get" asp-action="Search" asp-controller="User" class="d-flex justify-content-center my-4">
                <input type="text" name="text" class="form-control w-75 border-primary rounded-2" />
                <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
            </form>
            @if (Model == null || !Model.Any())
    {
        <h1 class="text-center">No Products</h1>
    }
    else
    {
            @foreach (Product item in Model)
            {
                <div class="col-md-4 col-sm-6 d-flex justify-content-center">
                    <div class="card" style="width: 18rem;">
                        <img src="@item.imageSrc" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p>Price @item.TotalPrice</p>
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm btn-success">
                                <i class="bi bi-pen"></i> Edit
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-primary btn-sm btn-danger">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
            }
        </div>
    </div>
</div>