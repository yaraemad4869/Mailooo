@model Product
@{
    ViewData["Title"] = "Delete";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .container {
            background-color: rgba(143, 217, 251, 0.2); /* White with 80% opacity    */
            border-radius: 10px;
            padding: 2%;
            width: 50%;
            margin: auto;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
        }

        .form-control {
            width: 250px;
        }
    </style>

</head>
<body>
    <h2 class="text-primary">Delete Item</h2>
    <hr />
    <div class="container justify-center mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form method="post" asp-action="Delete">
                    <input asp-for="ID" hidden />
                        <div class="mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" disabled class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" disabled class="form-control" />
                        </div>
                        <div>
                            <input type="hidden" asp-for="clientFile" />
                        </div>
                    <div class="mb-3">
                        <label asp-for="SQuantity">S Quantity</label>
                        <input asp-for="SQuantity" disabled class="form-control" />

                    </div>
                    <div class="mb-3">
                        <label asp-for="MQuantity">M Quantity</label>
                        <input asp-for="MQuantity" disabled class="form-control" />
                    </div>
                        <div class="mb-3">
                            <label asp-for="LQuantity">L Quantity</label>
                            <input asp-for="LQuantity" disabled class="form-control" />

                        </div>
                    

                        <div class="mb-3">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" disabled class="form-control" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Category" class="control-label"></label>
                            <select asp-for="Category" disabled class="form-control">
                                <option value="0">Pants</option>
                                <option value="1">Hoodie</option>
                            </select>
                        </div>
                        <br />
                        <hr />
                        <button type="submit" class="btn btn-primary" >Delete</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary" >
                            back to items
                        </a>
                </form>
            </div>
        </div>
    </div>
    <br />
    <br />
</body>
</html>



