@model Mailo.Models.Product
@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .container {
            background-color: rgba(143, 217, 251, 0.2); 
            border-radius: 10px;
            padding: 2%;
            width: 50%;
            margin:auto;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.4);
        }
        .form-control {
            width: 300px;
        }
    </style>
</head>
<body>
        <h2 class="text-primary">Edit Item</h2>
        <hr />
    <div class="container justify-center mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form method="post" asp-action="Edit" enctype="multipart/form-data"> 
                        <div asp-validation-summary="All"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price"></label>
                        <input type="number" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Discount"></label>
                        <input type="number" asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                    <div class="form-group mb-3">
                        <label asp-for="SQuantity">S Quantity</label>
                        <input asp-for="SQuantity" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MQuantity">M Quantity</label>
                        <input asp-for="MQuantity" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LQuantity">L Quantity</label>
                        <input asp-for="LQuantity" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                         <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label"></label>
                            <select asp-for="Category" class="form-control">
                                <option value="0">Pants</option>
                                <option value="1">Hoodie</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    <div class="form-group mb-3">
                        <label asp-for="clientFile" class="control-label">Upload New Image (optional)</label>
                        <input asp-for="clientFile" class="form-control" type="file" />
                        <span asp-validation-for="clientFile" class="text-danger"></span>
                    </div>
                    @* <div class="form-group mb-3">
                        <label asp-for="dbImage" class="control-label"></label>
                        <input asp-for="dbImage" class="form-control" type="file" />
                        <span asp-validation-for="dbImage" class="text-danger"></span>
                    </div> *@
                       @*  <div>
                            <input type="hidden" asp-for="clientFile" />
                        </div> *@
                        <br />
                        <hr />
                    <button type="submit" class="btn btn-success">Save</button>
                        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary">
                            back to items
                        </a>
                </form>
            </div>
        </div>
     </div>
    <br />
    <br />
   </body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}