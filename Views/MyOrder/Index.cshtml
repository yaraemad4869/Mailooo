@model EntityOrder
<div class="row">
	<div class="col-md-6">
		<form asp-action="CreateOrder">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" type="text"/>
			</div>

			<div class="form-group">
				<label asp-for="Mobile"></label>
				<input asp-for="Mobile" class="form-control" type="text" />
			</div>

			<div class="form-group">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" type="email" />
			</div>
			<div class="form-group">
				<label asp-for="Amount"></label>
				<input asp-for="Amount" class="form-control" type="number" />
			</div>
			
			<div class="form-group align-content-center">
				<input type="submit" class="btn btn-success" value="Click to pay">
			</div>

			
		</form>
	</div>
</div>
