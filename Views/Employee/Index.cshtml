@model List<Employee>
@{
    ViewData["Title"] = "Employees";
}
<div class="container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Employees</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="New" class="btn btn-primary">
            <i class="bi bi-plus"></i> &nbsp; Add new Employee
        </a>
    </div>
</div>
<br />
@if (Model == null || !Model.Any())
    {
        <h1 class="text-center">No Employees</h1>
    }
    else
    {
<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Gender</th>
                <th>Hiring Date</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Employee e in Model)
            {
                <tr>
                    <td>@e.FullName</td>
                    <td>@e.PhoneNumber</td>
                    <td>@e.Email</td>
                    <td>@e.Gender</td>
                    <td>@e.HiringDate</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@e.ID" class="btn btn-primary btn-sm btn-success">
                            <i class="bi bi-pen"></i> Edit |
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@e.ID" class="btn btn-primary btn-sm btn-danger">
                            <i class="bi bi-trash3"></i> Delete |
                        </a> 
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>
}
</div>